<div>
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(model=>model.BookTitle)</th>
            <th>@Html.DisplayNameFor(model=>model.BookISBN)</th>
            <th>@Html.DisplayNameFor(model=>model.BookEntryDate)</th>
        </tr>

        @foreach(var item in Model)
        {
        <tr>
            <td>@Html.DisplayFor(model => item.BookTitle)</td>
            <td>@Html.DisplayFor(model => item.BookISBN)</td>
            <td>@Html.DisplayFor(model => item.BookEntryDate)</td>
        </tr>
        }

    </table>
